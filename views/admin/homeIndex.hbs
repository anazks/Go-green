    <li><a href="/consultant">Krishibhavan</a></li>
    <li><a href="http://localhost:7000/" target="_blank">Group chat</a></li>
    <!-- Add your navigation links here -->
</nav>

<!-- Jumbotron -->
<div class="jumbotron">
    <h1 class="display-4">{{sending_news.title}}</h1>
    <p class="lead">{{sending_news.content}}</p>
