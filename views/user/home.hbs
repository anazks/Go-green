<div class="container" style="margin-top: 20px;">
  <h2 class="product-title text-center m-4">New Arrivals on Proucts</h2>
  <div class="row">
    {{#each product}}
    <div class="col-sm-3" style="margin-left: 0px; height: 500px">
      <div class="card" style="width: 15rem; height:100%">
        <img src="/images/product/{{_id}}.jpg" class="card-img-top" alt="...">
        <div class="card-body text-center" id="product-info" style="overflow: hidden;">
          <h6 class="card-title"><b>Product from:</b>{{place}}</h6>
          <h6 class="card-title">{{productName}}</h6>
          <h5 class="card-title">Ingredients : {{ingredients}} </h5>
          <p class="card-text">{{description}}
          </p>
          <p class="card-text">₹{{price}}</p>
        </div>
        <div class="bottom text-center m-2">
          <a href="/users/addtoCart/{{_id}}" class="btn btn-warning">Add to Cart</a>
          <a href="/users/buynow/{{_id}}/1" class="btn btn-success">Buy
            Now</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
